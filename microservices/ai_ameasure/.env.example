# FastAPI設定
PROJECT_NAME="AI A-Measure API"
VERSION="1.0.0"
API_V1_STR="/api/v1"

# CORS設定
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# MySQL接続設定（管理者画面と同じデータベース）
MYSQL_ENGINE=mysql
MYSQL_DB=mlp_db
MYSQL_USER=root
MYSQL_PASSWORD=mysql_pass
MYSQL_HOST=localhost
MYSQL_PORT=3306

# ファイルアップロード設定
MAX_UPLOAD_SIZE=104857600  # 100MB
UPLOAD_DIR="/tmp/ai_ameasure_uploads"

# データフォルダ設定
# Docker環境では/app/data、ローカル環境では実際のパスを指定
DATA_FOLDER="/app/data"
OUTPUT_FOLDER="/app/output"

# ローカル環境の例:
DATA_FOLDER="/home/nowatari/repos/enzan-ai-cn-dev/data"
OUTPUT_FOLDER="/home/nowatari/repos/enzan-ai-cn-dev/microservices/ai_ameasure/output"

# 計算設定
DEFAULT_MAX_DISTANCE_FROM_FACE=100.0
DEFAULT_PREDICTION_TD=500

# その他の設定
ENVIRONMENT=development
DEBUG=true